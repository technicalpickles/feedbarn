#!/usr/bin/env ruby

$:.unshift File.dirname(__FILE__) + '/../lib'

require 'feedbarn'

farmer = FeedBarn::Farmer.new
# feeds = farmer.gather

barn = farmer.build 'my-barn'

farmer.fill barn

showcase = farmer.showcase barn

showcase.output

